# PPE Detection Backend - Environment Variables
# Copy this to .env and fill in your values

# ===== Database =====
DATABASE_URL=postgresql://postgres:password@localhost:5432/ppe_detection

# ===== YOLO Model =====
YOLO_MODEL_PATH=./models/yolov11m_best.pt
YOLO_CONFIDENCE_THRESHOLD=0.25

# ===== SAM Model =====
SAM_ENABLED=false  # Set to true when GPU is available
SAM_MODEL_PATH=./models/sam3.pt
SAM_DEVICE=cuda  # or 'cpu' for CPU-only
SAM_MASK_THRESHOLD=0.05

# ===== Email (SMTP) =====
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_app_password

# ===== Reporting =====
MANAGER_EMAILS=["manager1@company.com", "manager2@company.com"]
REPORT_TIME=23:59
REPORT_OUTPUT_DIR=./reports

# ===== Application =====
DEBUG=true
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# ===== Site Configuration =====
DEFAULT_SITE_LOCATION=Construction Site A
DEFAULT_CAMERA_ID=CAM-001
